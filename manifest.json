{
    "name": "ForgetMeNot",
    "version": "1.2.0",
    "manifest_version": 2,
    "description": "Bring news articles to life",
    "permissions": ["tabs", "http://*/*", "contextMenus"],
    "content_scripts" : [{
        "matches" : [ "*://*/*"],
        "exclude_matches": ["http://cms.explaain.com/", "http://cms.dev.explaain.com/", "http://cms.explaain.com/", "http://explaain-cms.herokuapp.com/", "https://explaain-cms.herokuapp.com/", "http://localhost:5003/"],
        "js" : ["script.js"]
    }],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "browser_action": {
      "default_icon": "icon48.png",
      "default_popup": "popup.html"
    },
    "web_accessible_resources": [
      "pageScript.js",
      "jquery.min.js"
    ],
    "background": {
      "scripts": ["background.js"]
    }
}
